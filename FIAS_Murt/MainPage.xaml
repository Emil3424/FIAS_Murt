<Page x:Class="FIAS_Murt.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FIAS_Murt"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="#f2f2f2">
        <StackPanel Margin="20">

            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" ItemWidth="400" ItemHeight="200" Width="800">

                <!-- Карточка ГАР -->
                <Border Background="#306f8d" BorderThickness="1" CornerRadius="5" Margin="10"
                MouseLeftButtonUp="FlipCard_MouseLeftButtonUp">
                    <Grid>
                        <Grid x:Name="GarFront">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE707;" FontSize="28" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="ГОС. АДРЕСНЫЙ РЕЕСТР" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                </StackPanel>
                                <TextBlock Text="База данных всех адресов, объектов недвижимости и их параметров."
                           TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5,10,5,0"/>
                            </StackPanel>
                        </Grid>
                        <Grid x:Name="GarBack" Visibility="Collapsed">
                            <StackPanel Margin="10">
                                <TextBlock Text="Дополнительно о ГАР" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                <TextBlock Text="Доступ к официальным адресным данным, проверка и внесение изменений."
                           TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5,10,5,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Карточка Заявки -->
                <Border Background="#54a0c4" BorderThickness="1" CornerRadius="5" Margin="10"
                MouseLeftButtonUp="FlipCard_MouseLeftButtonUp">
                    <Grid>
                        <Grid x:Name="ZayavkiFront">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FD;" FontSize="28" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="ЗАЯВКИ" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                </StackPanel>
                                <TextBlock Text="Система подачи заявок на внесение, изменение и удаление данных."
                           TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5,10,5,0"/>
                            </StackPanel>
                        </Grid>
                        <Grid x:Name="ZayavkiBack" Visibility="Collapsed">
                            <StackPanel Margin="10">
                                <TextBlock Text="Подробнее о заявках" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                <TextBlock Text="Отслеживание статуса, история изменений и возможность отклонения заявки."
                           TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5,10,5,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Карточка Статистика -->
                <Border Background="#40b4bf" BorderThickness="1" CornerRadius="5" Margin="10"
                MouseLeftButtonUp="FlipCard_MouseLeftButtonUp">
                    <Grid>
                        <Grid x:Name="StatFront">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9D2;" FontSize="28" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="СТАТИСТИКА" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                </StackPanel>
                                <TextBlock Text="Аналитика по адресным объектам, изменениям и актуальности базы данных."
                           TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5,10,5,0"/>
                            </StackPanel>
                        </Grid>
                        <Grid x:Name="StatBack" Visibility="Collapsed">
                            <StackPanel Margin="10">
                                <TextBlock Text="Аналитика и отчеты" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                <TextBlock Text="Просмотр тенденций, прироста и обновления адресных данных."
                           TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5,10,5,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Карточка Новости -->
                <Border Background="#2d4159" BorderThickness="1" CornerRadius="5" Margin="10"
                MouseLeftButtonUp="FlipCard_MouseLeftButtonUp">
                    <Grid>
                        <Grid x:Name="NewsFront">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE825;" FontSize="28" Foreground="White" Margin="0,0,5,0"/>
                                    <TextBlock Text="НОВОСТИ ФИАС" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                </StackPanel>
                                <TextBlock Text="Обновления системы, новые правила и изменения в базе ФИАС."
                           TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5,10,5,0"/>
                            </StackPanel>
                        </Grid>
                        <Grid x:Name="NewsBack" Visibility="Collapsed">
                            <StackPanel Margin="10">
                                <TextBlock Text="Последние изменения" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                <TextBlock Text="История обновлений, новые функции и важные события в системе."
                           TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5,10,5,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>