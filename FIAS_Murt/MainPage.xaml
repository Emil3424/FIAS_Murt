<Page x:Class="FIAS_Murt.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FIAS_Murt"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <!-- Основное поле: левая часть (блоки-ссылки) и правая часть (уведомления) -->
        <Grid Grid.Row="2">

            <!-- Левая колонка с блоками -->
            <StackPanel Margin="20,20,20,20" Grid.ColumnSpan="2">
                <TextBlock Text="Быстрый доступ к разделам ФИАС"
                   FontWeight="Bold"
                   FontSize="24"
                   Margin="140,0,0,20"
                   Foreground="#2d2f39" />

                <!-- Сетка/WrapPanel с квадратами -->
                <WrapPanel Orientation="Horizontal" ItemWidth="300" ItemHeight="200" HorizontalAlignment="Center">
                    <Border Background="#306f8d" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                        <StackPanel Margin="10">
                            <TextBlock Text="ГОСУДАРСТВЕННЫЙ АДРЕСНЫЙ РЕЕСТР" FontWeight="Bold" Foreground="#FFFFFF" FontSize="18" TextWrapping="Wrap" />
                            <TextBlock Text="Адресные данные, перечень адресных объектов, параметры объектов."
                               TextWrapping="Wrap" Foreground="#FFFFFF" FontSize="18" />
                        </StackPanel>
                    </Border>

                    <Border Background="#54a0c4" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                        <StackPanel Margin="10">
                            <TextBlock Text="ЗАЯВКИ" FontWeight="Bold" Foreground="#FFFFFF" FontSize="18" />
                            <TextBlock Text="Заявки на внесение изменений, удаление, добавление."
                               TextWrapping="Wrap" Foreground="#FFFFFF" FontSize="18" />
                        </StackPanel>
                    </Border>

                    <Border Background="#e0e1e6" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                        <StackPanel Margin="10">
                            <TextBlock Text="МУНИЦИПАЛЬНЫЕ УСЛУГИ" FontWeight="Bold" FontSize="18" />
                            <TextBlock Text="Описание муниципальных услуг, формы, сроки и условия."
                               TextWrapping="Wrap" FontSize="18" />
                        </StackPanel>
                    </Border>

                    <Border Background="#40b4bf" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                        <StackPanel Margin="10">
                            <TextBlock Text="СТАТИСТИКА" FontWeight="Bold" Foreground="#FFFFFF" FontSize="18" />
                            <TextBlock Text="Статистические данные, аналитика, отчёты."
                               TextWrapping="Wrap" Foreground="#FFFFFF" FontSize="18" />
                        </StackPanel>
                    </Border>

                    <Border Background="#247d8f" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                        <StackPanel Margin="10">
                            <TextBlock Text="ПОМОЩЬ" FontWeight="Bold" Foreground="#FFFFFF" FontSize="18" />
                            <TextBlock Text="Руководство пользователя, ответы на частые вопросы."
                               TextWrapping="Wrap" Foreground="#FFFFFF" FontSize="18" />
                        </StackPanel>
                    </Border>

                    <Border Background="#2d4159" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                        <StackPanel Margin="10">
                            <TextBlock Text="НОВОСТИ ФИАС" FontWeight="Bold" Foreground="#FFFFFF" FontSize="18" />
                            <TextBlock Text="Последние обновления, изменения и важные события."
                               TextWrapping="Wrap" Foreground="#FFFFFF" FontSize="18" />
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>