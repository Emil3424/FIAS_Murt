<Page x:Class="FIAS_Murt.Uvedoml.UvedEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FIAS_Murt.Uvedoml"
      mc:Ignorable="d"
      Title="Редактирование уведомления">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="20">
            <TextBlock Text="Заявка (ID):" />
            <TextBox x:Name="txtIDZayavki" />

            <TextBlock Text="Тип уведомления:" />
            <TextBox x:Name="txtTypeUved" />

            <TextBlock Text="Статус:" />
            <TextBox x:Name="txtStatusUved" />

            <TextBlock Text="Дата исполнения:" />
            <DatePicker x:Name="dpDataIspoln" />

            <TextBlock Text="Комментарий:" />
            <TextBox x:Name="txtKommentarii" />

            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click" />
                <Button Content="Отмена" Width="100" Margin="5" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>