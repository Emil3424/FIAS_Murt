<Page x:Class="FIAS_Murt.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FIAS_Murt"
      mc:Ignorable="d"
      Title="Создание отчёта">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnGenerateExcel" Content="Создать Excel" Click="btnGenerateExcel_Click" Margin="5" />
            </StackPanel>

            <DataGrid Name="dataGridPreview" AutoGenerateColumns="True" Height="400" Width="1000" Margin="10" />
        </StackPanel>
    </Grid>
</Page>